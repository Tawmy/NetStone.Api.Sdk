<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyVersion>4.0.6</AssemblyVersion>
        <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);IncludeProjectReferenceDefinitions</TargetsForTfmSpecificContentInPackage>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\NetStone.Common\NetStone.Common\NetStone.Common.csproj"
                          PrivateAssets="all"
                          ReferenceOutputAssembly="false"/>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="..\NetStone.Common\NetStone.Common\bin\$(Configuration)\net10.0\NetStone.Common.dll"/>
    </ItemGroup>

    <Target Name="IncludeProjectReferenceDefinitions" BeforeTargets="_GetBuildOutputFilesWithTfm">
        <ItemGroup>
            <BuildOutputInPackage Include="..\NetStone.Common\NetStone.Common\bin\$(Configuration)\net10.0\NetStone.Common.dll"/>
            <BuildOutputInPackage Include="..\NetStone.Common\NetStone.Common\bin\$(Configuration)\net10.0\NetStone.Common.xml"
                                  Condition="Exists('..\NetStone.Common\NetStone.Common\bin\$(Configuration)\net10.0\NetStone.Common.xml')"/>
        </ItemGroup>
    </Target>

    <ItemGroup>
        <PackageReference Include="Duende.AccessTokenManagement" Version="4.1.0"/>
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.1"/>
        <PackageReference Include="Refit" Version="9.0.2"/>
        <PackageReference Include="Refit.HttpClientFactory" Version="9.0.2"/>
        <PackageReference Include="Tawmy.AspNetCoreExtensions" Version="1.1.0"/>
    </ItemGroup>

</Project>
